<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"  >
        {% block stylesheets %}
          <link rel="stylesheet" href="{{ asset('css/style.css') }}"    >
        {% endblock %}
    </head>
    <body>
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href={{path("home")}} >freeCodeCamp</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              {% if app.user %}  
                <li class="nav-item">
                  <a class="nav-link" href={{path("custom", {"name":"{%app.user.username % }"})}}> {{ app.user.username }}</a>
                </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link" href={{path("postcreate")}}>Create post</a>
              </li>
              {% if app.user %}  
                <li class="nav-item">
                   <a class="btn btn-secondary" href="{{ path('app_logout') }}">Logout</a>
                </li>
                {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href={{path("app_login")}}>Login</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href={{path("register")}}>Registration</a>
                  </li>
              {% endif %}
            </ul>
            <!--<form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>-->
          </div>
        </nav>
        {% block body %}{% endblock %}
      </div>
        
        {% block javascripts %}
        
            <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
            <script src="index.js"></script>
        {% endblock %}
    </body>
</html>
